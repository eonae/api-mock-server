{
    "compilerOptions": {
      "module": "commonjs",
      "declaration": true,
      "noImplicitAny": false,
      "removeComments": true,
      "esModuleInterop": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "target": "es6",
      "sourceMap": true,
      "outDir": "./dist",
      "baseUrl": "./lib"
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "./example",
      "./node_modules",
      "**/*.spec.ts"
    ]
  }